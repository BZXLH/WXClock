Page {
  height: 100%;
  background-color: black;
}

/* 页面的背景图片 */
.bac {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -3;
}

/* 背景虚化效果 */
.bacColor {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, .4);
  backdrop-filter: blur(10px);
  z-index: -2;
}

/* 最外层容器 */
.reportContainer {
  height: 100%;
  padding: 10% 66rpx 0;
}

/* 上传周记模块 */
.submit {
  position: relative;
  width: 100%;
  height: 60%;
}

/* 输入周记 */
.weeklyReportSubmit {
  box-sizing: border-box;
  padding: 60rpx 50rpx;
  width: 100%;
  height: 100%;
  font-size: 34rpx;
}

/* placeholder-style */
.hint {
  color: #000000;
  font-size: 34rpx;
}

/* 上传周报按钮 */
#submitWeeklyReport {
  margin-top: 100rpx;
  padding-left: 0;
  padding-right: 0;
  width: 230rpx;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: white;
  background-image: linear-gradient(to right, #B2185C, #594692);
}

/* loading */
.loader {
  margin-left: 20rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  display: inline-block;
  border-top: 3px solid #FFF;
  border-right: 3px solid transparent;
  box-sizing: border-box;
  animation: rotation 1s linear infinite;
}

@keyframes rotation {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}


