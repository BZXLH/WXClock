Page {
  height: 100%;
}

.reportContainer {
  height: 100%;
  padding: 30rpx 66rpx 0;
}

.reportSwiper{
  overflow: hidden;
  width: 618rpx;
  height: 720rpx;
  border-radius: 32rpx;
}

.bac, 
.bacImg
{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.bac {
  background: rgba(255, 255, 255, .4);
  z-index: -1;
}

.bacImg {
  top: -30rpx;
  left: -66rpx;
  width: 750rpx;
  height: 1110rpx;
  filter: blur(20rpx);
  z-index: -2;
}

.swiperItem {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 40rpx;
 }

.content {
  margin-top: 50rpx;
  text-align: center;
  font-size: 90rpx;
  font-weight: bold;
}

.title {
  font-size: 44rpx;
  font-family: 'PingFang SC';
}

.info {
  margin: 30rpx 0;
  text-align: right;
  font-size: 34rpx;
}

/* 完成计划列表 */
.completedPlanList {
  position: relative;
  box-sizing: border-box;
  height: 532rpx;
  padding: 0 40rpx;
}

/* 完成的计划 */
.completedPlan {
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  font-weight: bold;
}

/* 没有完成的计划 */
.error {
  position: absolute;
  left: 50%;
  top: 50%;
  white-space: nowrap;
  transform: translate(-50%, -50%);
  font-size: 50rpx;
  font-weight: 700;
}


/* 周报 */
.weeklyReport {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 34rpx;
  color: #000000;
}

/* 轮播图小点 */
.swiperDot {
  display: flex;
  justify-content: center;
}

/* 点 */
.dot {
  margin: 40rpx 8rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: white;
  border-radius: 8rpx;
  transition: all .4s;
}

/* 选中的点 */
.swiperDot .selectDot {
  width: 66rpx;
}


