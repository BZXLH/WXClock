Page {
  height: 100%;
  overflow: hidden;
  background-color: black;
}

/* 最外层的盒子 */
.reportContainer {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
  padding: 30rpx 66rpx 0;
}

/* 页面的背景图片 */
.bac {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -3;
}

/* 背景虚化效果 */
.bacColor {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, .4);
  backdrop-filter: blur(10px);
  z-index: -1;
}


/* 相同样式 */
.basicInfo,
.finishedPlan,
.weeklyReport {
  position: relative;
  width: 100%;
}

/* 基本信息模块 */
.basicInfo {
  margin-bottom: 30rpx;
  height: 186rpx;
  padding: 30rpx 0;
}

/* 基本信息 */
.info {
  display: flex;
  justify-content: space-around;
  height: 100%;
  padding: 0 20rpx;
}

/* 每组基本信息 */
.infoItem {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
}

/* 信息的内容 */
.content {
  margin-top: 30rpx;
  text-align: center;
  font-size: 44rpx;
  font-weight: bold;
}

/* 信息的标题 */
.title {
  text-align: center;
  font-size: 24rpx;
  font-family: 'PingFang SC Regular';
}


/* 完成计划模块 */
.finishedPlan {
  min-height: 316rpx;
  height: 100%;
}

/* 标题共同样式 */
.planTitle,
.weeklyReportTitle {
  margin: 16rpx 0 10rpx 60rpx;
  font-weight: 600;
}

.planTitle {
  margin: 0;
  padding:  16rpx 0 0 60rpx;
  box-sizing: border-box;
  height: 10%;
}

/* 完成计划列表 */
.finishedPlanList {
  padding-top: 10rpx;
  box-sizing: border-box;
  height: 90%;
}

/* 完成的计划 */
.finishedPlanItem {
  margin: 10rpx 100rpx;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  font-weight: bold;
}

/* 没有数据的提示 */
.error {
  position: absolute;
  left: 50%;
  top: 50%;
  white-space: nowrap;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
}

/* 周报 */
.weeklyReport {
  padding-bottom: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

/* 周报没有数据表 */
.weeklyReportError {
  font-size: 24rpx;
  margin-left: 70rpx;
}

.weeklyReportContent {
  margin: 0 70rpx;
  font-size: 24rpx;
}

/* 往期周报按钮 */
#backBtn {
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  width: 300rpx;
  height: 80rpx;
  background: rgba(49, 52, 84, .5);
  color: #d4d3d8;
  border-radius: 8rpx;
  font-size: 34rpx;
  font-weight: 400;
}



