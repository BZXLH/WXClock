Page {
  height: 100%;
  overflow: hidden;
}

.reportContainer {
  height: 100%;
  padding: 30rpx 66rpx 0;
}

.reportSwiper {
  overflow: hidden;
  width: 618rpx;
  height: 720rpx;
  border-radius: 32rpx;
}

.bac,
.bacImg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.bac {
  background: rgba(255, 255, 255, .4);
  z-index: -1;
}

.bacImg {
  top: -30rpx;
  left: -66rpx;
  width: 750rpx;
  height: 1110rpx;
  filter: blur(20rpx);
  z-index: -2;
}

.swiperItem {
  box-sizing: border-box;
  padding: 40rpx;
  width: 100%;
  height: 100%;
}

.content {
  margin-top: 50rpx;
  text-align: center;
  font-size: 90rpx;
  font-weight: bold;
}

.title {
  font-size: 44rpx;
  font-family: 'PingFang SC';
}

.info {
  margin: 30rpx 0;
  text-align: right;
  font-size: 34rpx;
}

/* 完成计划列表 */
.completedPlanList {
  position: relative;
  box-sizing: border-box;
  height: 532rpx;
  padding: 0 40rpx;
}

/* 完成的计划 */
.completedPlan {
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  font-weight: bold;
}

/* 没有完成的计划 */
.error {
  position: absolute;
  left: 50%;
  top: 50%;
  white-space: nowrap;
  transform: translate(-50%, -50%);
  font-size: 50rpx;
  font-weight: 700;
}

/* 周报 */
.weeklyReport {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  white-space: normal;
  font-size: 34rpx;
  color: #000000;
}

/* placeholder样式 */
.placeholderStyle {
  font-size: 34rpx;
  color: #000000;
}

/* 轮播图小点 */
.swiperDot {
  display: flex;
  justify-content: center;
}

/* 点 */
.dot {
  margin: 40rpx 8rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: white;
  border-radius: 8rpx;
  transition: all .4s;
}

/* 选中的点 */
.swiperDot .selectDot {
  width: 66rpx;
}

/* 往期周报按钮 */
#checkBtn {
  width: 300rpx;
  height: 80rpx;
  background: rgba(49, 52, 84, .5);
  color: #d4d3d8;
  border-radius: 8rpx;
  font-size: 34rpx;
  font-weight: 400;
}


/* 上传周报按钮 */
#submitWeeklyReport {
  padding-left: 0;
  padding-right: 0;
  width: 230rpx;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  font-weight: 400;
}

/* loading */
.loader {
  margin-left: 20rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  display: inline-block;
  border-top: 3px solid #FFF;
  border-right: 3px solid transparent;
  box-sizing: border-box;
  animation: rotation 1s linear infinite;
}

@keyframes rotation {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}