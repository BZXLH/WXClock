<view class="container">
  <image src='../../image/background2.png'></image>
  <view class='text'>
    <view class="add-item">计划名称 <input class="plan-name" type="text" bindinput="getTaskname" /></view>
    <view class="section">
      <picker mode="date" value="{{date}}" start="{{today}}" end="2030-09-01" bindchange="bindDateChange2">
        <view class="picker">
         开始日期 <test class="start-time">{{startTime}}</test>
        </view>
      </picker>
    </view>
    <view class="section">
      <picker mode="date" value="{{date}}" start="{{today}}" end="2030-09-01" bindchange="bindDateChange">
        <view class="picker">
          截止日期 <test class="end-time">{{endTime}}</test>
        </view>
      </picker>
    </view>
    <view class="add-item">
      详细内容 <textarea class="plan-detail" placeholder="请输入您的计划内容" bindinput="getContent"></textarea>
    </view>
  </view>
</view>
<button class="add-btn"  bindtap="postPlan">新建计划</button>