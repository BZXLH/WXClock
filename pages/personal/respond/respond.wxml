<!--pages/personal/respond/respond.wxml-->
<image class="background" src="../../../assets/first_background.png"></image>
<view class="mask"></view>
<view class="nav">
  <view class="nav_inside">
    <view wx:if="{{info.userRole.roleId!=1}}" bindtap="chaNav" data-index="0" data-textlen="3">提意见</view>
    <view wx:if="{{info.userRole.roleId!=1}}" bindtap="chaNav" data-index="1" data-textlen="4">意见列表</view>
    <view wx:if="{{info.userRole.roleId!=1}}" class="nav_line" style="left:{{linePos+'rpx'}};width: {{wid}}rpx;" id="navLine"></view>
  </view>
</view>
<!-- 提意见 -->
<view hidden="{{tabs}}">
  <view class="main">
    <view class="title">
      <view style="font-weight: 600;">主题</view>
      <input bindblur="writeT" class="title_inp" />
    </view>
    <view class="mainText">
      <view style="margin-left: 45rpx; font-weight: 600;">具体内容</view>
      <textarea bindinput="writeC" class="mainText_inp" placeholder="请输入"></textarea>
    </view>
  </view>
  <button bindtap="sub" style="margin-top: 44rpx;" type="primary">发表意见</button>
</view>
<!-- 意见列表 -->
<view hidden="{{!tabs}}">
  <view class="respondList">
    <view bindtap="goToResopnseDetail" data-theme="{{item.theme}}" data-content="{{item.content}}" wx:key="id" wx:for="{{respondList}}" class="respondItem">
      <image class="respond_headPhoto"></image>
      <view class="respond_info">
        <view style="font-size: large;">{{item.theme}}</view>
        <view style="color: gray;">{{item.date}}</view>
      </view>
    </view>
    <view style="text-align: center;" hidden="{{respondList.length}}">这里啥都没有</view>
  </view>
</view>